<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("/content/bootstrap.min.css")
    @Styles.Render("/content/base.css")
    @RenderSection("styles", required: false)
    @Scripts.Render("/scripts/modernizr-2.8.3.js")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ac-predictor", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("インストール", "index", "install")</li>
                    <li><a href="https://github.com/key-moon/ac-predictor">GitHub</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - keymoon</p>
        </footer>
    </div>

    @Scripts.Render("/scripts/base.js")
    @Scripts.Render("/scripts/jquery-3.3.1.min.js")
    @Scripts.Render("/scripts/bootstrap.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
